{
  "name": "dev-env-helper",
  "displayName": "Dev Environment Helper",
  "description": "A VS Code extension to help make developers' life easier",
  "version": "0.0.1",
  "publisher": "jimseiwert",
  "author": {
    "name": "Jim Seiwert"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimseiwert/dev-env-extension.git"
  },
  "bugs": {
    "url": "https://github.com/jimseiwert/dev-env-extension/issues"
  },
  "homepage": "https://github.com/jimseiwert/dev-env-extension#readme",
  "keywords": [
    "developer",
    "productivity",
    "tools",
    "environment"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "dev-env-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "claudeSync.syncNow",
        "title": "Claude Sync: Sync Now",
        "icon": "$(sync)"
      },
      {
        "command": "claudeSync.showStatus",
        "title": "Claude Sync: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "claudeSync.openSettings",
        "title": "Claude Sync: Open Settings",
        "icon": "$(gear)"
      }
    ],
    "configuration": {
      "title": "Claude Sync",
      "properties": {
        "claudeSync.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Claude configuration sync across machines"
        },
        "claudeSync.gistId": {
          "type": "string",
          "description": "GitHub Gist ID for sync storage (auto-generated)"
        },
        "claudeSync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync when files change"
        },
        "claudeSync.syncInterval": {
          "type": "number",
          "default": 30,
          "description": "Sync interval in minutes"
        },
        "claudeSync.syncItems.settings": {
          "type": "boolean",
          "default": true,
          "description": "Sync Claude settings.json"
        },
        "claudeSync.syncItems.subagents": {
          "type": "boolean",
          "default": true,
          "description": "Sync Claude subagents.json"
        },
        "claudeSync.syncItems.hooks": {
          "type": "boolean",
          "default": true,
          "description": "Sync Claude hooks.json"
        },
        "claudeSync.syncItems.slashCommands": {
          "type": "boolean",
          "default": true,
          "description": "Sync custom slash commands"
        },
        "claudeSync.syncItems.plugins": {
          "type": "boolean",
          "default": true,
          "description": "Sync plugin configurations"
        },
        "claudeSync.syncItems.claudeMd": {
          "type": "boolean",
          "default": false,
          "description": "Sync CLAUDE.md project files"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "claudeSync.syncNow",
          "when": "config.claudeSync.enabled"
        },
        {
          "command": "claudeSync.showStatus",
          "when": "config.claudeSync.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  }
}